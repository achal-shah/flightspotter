@model IEnumerable<FlightSpotter.Web.Models.FlightEntity>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sort = (ViewBag.Sort as string) ?? "asc";
    var next = sort == "asc" ? "desc" : "asc";
    var tzId = ViewBag.TimeZoneId as string;
    TimeZoneInfo? tz = null;
    if (!string.IsNullOrEmpty(tzId))
    {
        try { tz = TimeZoneInfo.FindSystemTimeZoneById(tzId); } catch { tz = TimeZoneInfo.Utc; }
    }
}

@{
    // Determine whether to show a specific target date header.
    DateTime? targetDate = ViewBag.TargetDate != null ? (DateTime?)ViewBag.TargetDate : null;
    DateTime localToday;
    if (tz != null)
    {
        localToday = TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, tz).Date;
    }
    else
    {
        localToday = DateTime.Today;
    }
}

<div class="page-header">
    <h1>
        @if (targetDate.HasValue && targetDate.Value.Date != localToday)
        {
            <text>Flights seen @targetDate.Value.ToString("yyyy-MM-dd")</text>
        }
        else
        {
            <text>Flights seen today</text>
        }
    </h1>
    <p><a href="#">Include domestic carriers</a></p>
</div>

<div class="card">
    <div class="card-header font-weight-bold">@Model.Count() total flights seen</div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Country</th>
                    <th>Flight</th>
                    <th><a href="?sort=@next" class="text-white">Time @if(sort=="asc"){<text>↑</text>}else{<text>↓</text>}</a></th>
                    <th>Aircraft Code</th>
                    <th>Registration</th>
                    <th>Aircraft Type</th>
                    <th>Altitude</th>
                    <th>Heading</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td class="flag-cell">
                            @{
                                // Use FlagCDN for runtime flags (2-letter ISO lower-case)
                                var cc = (f.CountryCode ?? "").ToLowerInvariant();
                                var flagCdnTemplate = "https://flagcdn.com/w40/{0}.png";
                            }

                            @if (!string.IsNullOrEmpty(cc))
                            {
                                <img src="@string.Format(flagCdnTemplate, cc)"
                                     alt="@f.Country"
                                     title="@f.Country"
                                     class="flag" />
                            }
                            else if (!string.IsNullOrEmpty(f.Country))
                            {
                                <span title="@f.Country">@f.Country.Substring(0, Math.Min(2, f.Country.Length))</span>
                            }
                        </td>

                        @* Fixed column order: Flight, Time, Aircraft Code, Registration, Aircraft Type, Altitude, Heading, Latitude, Longitude *@
                        <td style="width:80px">
                            @{
                                var flightId = (f.Flight ?? string.Empty).Trim();
                                var encoded = System.Net.WebUtility.UrlEncode(flightId);
                                var faUrl = $"https://flightaware.com/live/flight/{encoded}";
                            }
                            <a href="@faUrl" target="_blank" rel="noopener noreferrer">@f.Flight</a>
                        </td>

                        <td>
                            @{
                                string timeDisplay = f.Time;
                                var dt = f.TimeAsDateTime;
                                if (dt.HasValue && tz != null)
                                {
                                    DateTime utc;
                                    if (dt.Value.Kind == DateTimeKind.Unspecified)
                                    {
                                        // assume stored value is UTC if kind is unspecified
                                        utc = DateTime.SpecifyKind(dt.Value, DateTimeKind.Utc);
                                    }
                                    else if (dt.Value.Kind == DateTimeKind.Local)
                                    {
                                        utc = dt.Value.ToUniversalTime();
                                    }
                                    else
                                    {
                                        utc = dt.Value; // already UTC
                                    }
                                    var local = TimeZoneInfo.ConvertTimeFromUtc(utc, tz);
                                    timeDisplay = local.ToString("HH:mm:ss");
                                }
                                else if (dt.HasValue)
                                {
                                    timeDisplay = dt.Value.ToString("HH:mm:ss");
                                }
                            }
                            @timeDisplay
                        </td>

                        <td>@f.AircraftCode</td>
                        <td>@f.Registration</td>
                        <td>@f.AircraftType</td>
                        <td>@f.Altitude</td>
                        <td>@f.Heading</td>
                        <td>@f.Latitude</td>
                        <td>@f.Longitude</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
