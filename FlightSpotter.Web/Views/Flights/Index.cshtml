@model IEnumerable<FlightSpotter.Web.Models.FlightEntity>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sort = (ViewBag.Sort as string) ?? "asc";
    var next = sort == "asc" ? "desc" : "asc";
}

<div class="page-header">
    <h1>Flights seen today</h1>
    <p><a href="#">Include domestic carriers</a></p>
</div>

<div class="card">
    <div class="card-header font-weight-bold">@Model.Count() total flights seen</div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Country</th>
                    <th>Flight</th>
                    <th><a href="?sort=@next" class="text-white">Time @if(sort=="asc"){<text>↑</text>}else{<text>↓</text>}</a></th>
                    <th>Aircraft Code</th>
                    <th>Registration</th>
                    <th>Aircraft Type</th>
                    <th>Altitude</th>
                    <th>Heading</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td style="width:80px">@f.Country</td>
                        <td><a href="#">@f.Flight</a></td>
                        <td>@f.Time</td>
                        <td>@f.AircraftCode</td>
                        <td>@f.Registration</td>
                        <td>@f.AircraftType</td>
                        <td>@f.Altitude</td>
                        <td>@f.Heading</td>
                        <td>@f.Latitude</td>
                        <td>@f.Longitude</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
